<div x-data="{open(){$refs.dialog.showModal()}, close(){$refs.dialog.close()}}">
  <dialog id="modal" x-ref="dialog" class="relative">
    <div class="fixed grid place-items-center inset-0 bg-black bg-opacity-70">
      <div class="flex flex-col justify-between bg-white w-[60%] h-[60%] py-16 px-20 rounded-xl">
        <div>
          <p class="mt-10">Do you want to log out?</p>
        </div>
        <div class="flex justify-around">
          <button type="button" @click="close()" class="px-8 py-2 border-2 border-gray-500 rounded-2xl hover:opacity-70">Cancel</button>
          <button
            type="button"
            hx-post="/api/logout"
            hx-trigger="click"
            hx-target="#modal"
            hx-swap="outerHTML"
            class="px-8 py-2 border-2 border-red-500 rounded-2xl hover:opacity-70"
          >
            Logout
          </button>
        </div>
      </div>
    </div>
  </dialog>
  <button @click="open()">Logout</button>
</div>
